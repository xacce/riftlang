{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rift",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.double-slash.rift",
        "match": "//.*"
      }]
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.rift",
        "match": "\\b(input|settings|print|if|else|stop|fetch|from|update)\\b"
      }]
    },
    "types": {
      "patterns": [{
        "name": "storage.type.rift",
        "match": "\\b(int|float|CharacterData|Entity|TestComponent1)\\b"
      }]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.rift",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "string.quoted.double.rift",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#escape" }
          ]
        }
      ]
    },
    "escape": {
      "patterns": [{
        "name": "constant.character.escape.rift",
        "match": "\\\\."
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.rift",
        "match": "=|==|\\.|\\+|\\-|\\*|/"
      }]
    },
    "identifiers": {
      "patterns": [{
        "name": "variable.other.rift",
        "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
      }]
    }
  },
	"scopeName": "source.rift"
}